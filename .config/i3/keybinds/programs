# manual screenshot capture (click and drag)
bindsym $sup+Shift+Print exec --no-startup-id flameshot gui
# capture full screen
bindsym Shift+Print exec --no-startup-id flameshot screen

# open file manager (thunar)
bindsym $sup+e exec --no-startup-id thunar

# launch kitty (terminal)
bindsym $mod+Return exec kitty

# start rofi
bindsym $mod+space exec --no-startup-id rofi -show drun -run-command "i3-msg exec '{cmd}'" -show-icons

# rofi clipboard tool
bindsym $mod+c exec --no-startup-id rofi -modi "clipboard:greenclip print" -show clipboard
