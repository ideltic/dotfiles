# open file manager (thunar)
bindsym $sup+e exec --no-startup-id thunar

# launch wezterm (terminal)
bindsym $mod+Return exec wezterm

# launch kitty (other terminal)
bindsym $mod+Shift+Return exec kitty

# start fuzzel (app launcher)
bindsym $mod+space exec --no-startup-id fuzzel --config=$HOME/.dotfiles/.config/fuzzel/fuzzel.ini

# rofi clipboard tool (OUTDATED; FIX THIS)
bindsym $mod+c exec clipman pick -t fuzzel --notify

# bemoji (emoji picker for fuzzel)
bindsym $sup+period exec --no-startup-id bemoji

# sway scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show
# move minimized windows into scratchpad (enable|disable)
scratchpad_minimize disable

# swaync control center
bindsym $mod+n exec swaync-client -t -sw

# capture screenshots using grim & slurp (config stolen from u/rggarou on r/swaywm)
# capture all screens to clipboard    
bindsym Shift+Print exec grim - | wl-copy    
    
# capture the specified screen area to clipboard    
bindsym $sup+Shift+Print exec grim -g "$(slurp)" - | wl-copy
    
# capture the focused monitor to clipboard    
# bindsym Shift+Control+Print exec grim -o $(swaymsg -t get_outputs | jq -r '.[] | select(.focused) | .name') - | wl-copy
