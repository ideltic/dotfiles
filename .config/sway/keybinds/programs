# open file manager (thunar)
bindsym $sup+e exec --no-startup-id thunar

# launch kitty (terminal)
bindsym $mod+Return exec kitty

# start rofi
bindsym $mod+space exec --no-startup-id rofi -show drun -run-command "swaymsg exec '{cmd}'" -show-icons -font "Hack Nerd Font 14"

# rofi clipboard tool
bindsym $mod+c exec --no-startup-id rofi -modi "clipboard:greenclip print" -show clipboard

# rofi emoji picker
bindsym $sup+period exec --no-startup-id rofi -modi emoji -show emoji -emoji-mode copy

# sway scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show
# move minimized windows into scratchpad (enable|disable)
scratchpad_minimize disable

# capture screenshots using grim & slurp (config stolen from u/rggarou on r/swaywm)
# capture all screens to clipboard    
bindsym Shift+Print exec grim - | wl-copy    
    
# capture the specified screen area to clipboard    
bindsym $sup+Shift+Print exec grim -g "$(slurp)" - | wl-copy
    
# capture the focused monitor to clipboard    
# bindsym Shift+Control+Print exec grim -o $(swaymsg -t get_outputs | jq -r '.[] | select(.focused) | .name') - | wl-copy
