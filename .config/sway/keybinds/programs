# open file manager (thunar)
bindsym $sup+e exec --no-startup-id thunar

# launch wezterm (terminal)
bindsym $mod+Return exec wezterm

# launch kitty (other terminal)
bindsym $mod+Shift+Return exec kitty

# start fuzzel (app launcher)
bindsym $mod+space exec --no-startup-id fuzzel --config=$HOME/.dotfiles/.config/fuzzel/fuzzel.ini

# cliphist (clipboard tool)
bindsym $mod+c exec cliphist list | fuzzel --dmenu | cliphist decode | wl-copy

# bemoji (emoji picker for fuzzel)
bindsym $sup+period exec --no-startup-id bemoji

# sway scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show
# move minimized windows into scratchpad (enable|disable)
scratchpad_minimize disable

# swaync control center
bindsym $mod+n exec swaync-client -t -sw

# capture screenshots using grim & slurp (config partially stolen from u/rggarou on r/swaywm)
# capture all screens
bindsym Shift+Print exec grim ~/Pictures/$(date +'%s_grim.png') && notify-send "Screenshot saved to ~/Pictures"
# capture all screens and copy to clipboard    
#bindsym Control+Shift+Print exec grim - | wl-copy && notify-send "Full screen copied to clipboard"

# capture the specified screen area
bindsym $sup+Shift+s exec grim -g "$(slurp)" ~/Pictures/$(date +'%s_grim.png') && notify-send "Selection saved to ~/Pictures"
# capture the specified screen area and copy to clipboard    
bindsym $sup+Shift+Print exec grim -g "$(slurp)" - | wl-copy && notify-send "Selection copied to clipboard"
